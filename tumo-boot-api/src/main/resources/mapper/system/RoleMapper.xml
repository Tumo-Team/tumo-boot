<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.tycoding.boot.modules.system.mapper.RoleMapper">

    <select id="findRolesByUserId" resultType="cn.tycoding.boot.modules.system.entity.Role">
        select r.*
        from sys_user u, sys_user_role ur, sys_role r
        where ur.user_id = u.id and ur.role_id = r.id and u.id = #{id}
    </select>

</mapper>
